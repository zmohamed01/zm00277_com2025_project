<div class="pages container">
  <h1 class="title1">CONTACT US</h1>
    <%= form_tag request_contact_path , method: :post do %>
    <div class="form-group row center">
      <div class="col-7">
      <label for="inputEmail">Email address</label>
      <%= email_field_tag :email,'', placeholder: 'Enter email', class: 'form-control', required: 'true' %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    </div>
      <div class="form-group row center">
      <div class="col-4">
        <label for="inputFirstname">Firstname</label>
        <%= text_field_tag :firstname,'', placeholder: 'e.g. John', class: 'form-control', required: 'true' %>
      </div>
    </div>
    <div class="form-group row center">
      <div class="col-4">
        <label for="inputSurname">Surname</label>
        <%= text_field_tag :surname,'', placeholder: 'e.g. Doe', class: 'form-control', required: 'true' %>
      </div>
    </div>
    <div class="form-group">
      <label for="textarea1">Message</label>
      <%= text_area_tag :message,'', placeholder: 'My message is...', class: 'form-control', rows: '4', required: 'true' %>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
    <% end %>

</div>
